<%- include('../partials/html-head') %>

<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST"
    >

    <label for="airline-input">Airline:</label>
    <input type="text" value="<%= flight.airline %>" name="airline" id="airline-input">

    <label for="airport-input">Airport:</label>
    <input type="text" value="<%= flight.airport %>" name="airport" id="airport-input">
    
    <label for="flightNo-input">Flight #:</label>
    <input type="number" name="flightNo" autocomplete="off" value="<%= flight.flightNo %>" name="flightNo" id="flightNo-input">

    <label for="departs-input">Date of departure</label>
    <input type="text" value="<%= flight.departs %>" name="departs" id="departs-input">

    <button type="submit">Update Flight Information</button>
  </form>
</main>

<%- include("../partials/footer") %>