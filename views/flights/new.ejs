<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<%- include("../partials/footer") %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <!-- <input type="text" name="airline" id="airline-input"> -->
    <select name="airline" id="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight #:</label>
    <input type="number" min="10" step="1" max="9999" name="flightNo" id="flightNo-input">
    <label for="departs-input">Date of departure</label>
    <input type="datetime-local" name="departs" id="departs">
    <button type="submit">Add Flight Information</button>
  </form>
</main>

<%- include('../partials/footer') %>
