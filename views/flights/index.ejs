<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight Tracker</h1>
  <table>
    <thead>
      <!-- <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th>Rating</th>
        <th>Cast</th>
        <th>Now Showing</th>
      </tr> -->
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach(function(flight) { %>
        <li>
          <form 
            action="/flights/<%= flight._id %>?_method=DELETE"
            class="delete-form"
            method="POST"
            >
            <button type="submit">X</button>
              <a href="/flights/<%= flight._id %>">
              Airline is <%= flight.airline %> ,
              Airport is <%= flight.airport %> ,
              Flight Number is <%= flight.flightNo %> ,
              Departure time is <%= flight.departs %> 
            </a> 
          </form>
        <% }) %>
    </tbody>
  </table>
</main>

